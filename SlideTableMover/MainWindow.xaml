<Window x:Class="SlideTableMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideTableMover"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="canvas" Width="800" Height="450">
        <Rectangle Name="map" Width="800" Height="450" Fill="Gray" MouseDown="Canvas_MouseDown" />
        <!-- X and Y axes -->
        <Line X1="0" Y1="225" X2="800" Y2="225" Stroke="Black" StrokeThickness="2"/>
        <Line X1="400" Y1="0" X2="400" Y2="450" Stroke="Black" StrokeThickness="2"/>
        <!-- Rectangle -->
        <Rectangle Name="movingRectangle" Width="50" Height="50" Fill="Blue"  Canvas.Left="0" Canvas.Top="0"/>
    </Canvas>
</Window>
